<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="project.ljy.rxjavatest.MainActivity">
 <android.support.v4.widget.SwipeRefreshLayout
     android:id="@+id/swl_refresh"
     android:layout_width="match_parent"
     android:layout_height="wrap_content">
 <android.support.v7.widget.RecyclerView
     android:id="@+id/list"
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     />
 </android.support.v4.widget.SwipeRefreshLayout>
<com.getbase.floatingactionbutton.FloatingActionsMenu
    android:id="@+id/fam_menu"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_alignParentRight="true"
    fab:fab_addButtonColorNormal="@color/colorPrimary"
    fab:fab_addButtonColorPressed="@color/colorPrimaryDark"
    fab:fab_labelsPosition="left"
    android:layout_margin="20dp"
    fab:fab_labelStyle="@style/menu_labels_style"
    fab:fab_size="mini"
    >
    <com.getbase.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        fab:fab_colorNormal="@color/colorPrimary"
        fab:fab_colorPressed="@color/colorPrimaryDark"
        fab:fab_size="mini"
        fab:fab_title="Android"
        fab:fab_icon="@mipmap/ic_launcher"
        android:onClick="onClick"
        />
    <com.getbase.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_ios"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        fab:fab_colorNormal="@color/colorPrimary"
        fab:fab_colorPressed="@color/colorPrimaryDark"
        fab:fab_size="mini"
        fab:fab_title="iOS"
        android:onClick="onClick"
        />
    <com.getbase.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_webfront"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        fab:fab_colorNormal="@color/colorPrimary"
        fab:fab_colorPressed="@color/colorPrimaryDark"
        fab:fab_size="mini"
        fab:fab_title="前端"
        android:onClick="onClick"
        />
    <com.getbase.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_fuli"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        fab:fab_colorNormal="@color/colorPrimary"
        fab:fab_colorPressed="@color/colorPrimaryDark"
        fab:fab_size="mini"
        fab:fab_title="福利"
        android:onClick="onClick"
        />
    <com.getbase.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_extendresource"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        fab:fab_colorNormal="@color/colorPrimary"
        fab:fab_colorPressed="@color/colorPrimaryDark"
        fab:fab_size="mini"
        fab:fab_title="瞎推荐"
        android:onClick="onClick"
        />
</com.getbase.floatingactionbutton.FloatingActionsMenu>
</RelativeLayout>
